<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:id="@+id/sampleRegistration"
            android:textColor="@color/fullBlack"
            android:layout_marginHorizontal="15dp"
            android:gravity="center_horizontal">
        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Name"
            app:errorEnabled="true"
            android:textColorHint="@color/fullBlack"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="12dp"
            android:id="@+id/inputName1"
            android:textSize="20dp"
            android:visibility="visible"
            android:textAlignment="center"
            android:layout_below="@+id/sampleRegistration"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputName"
                android:textAppearance="@style/QText">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Age"
            app:errorEnabled="true"
            android:textColorHint="@color/fullBlack"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="12dp"
            android:id="@+id/inputAge1"
            android:textSize="20dp"
            android:visibility="visible"
            android:textAlignment="center"
            android:layout_below="@+id/inputName1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputAge"
                android:inputType="number"
                android:textAppearance="@style/QText">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email Address"
            app:errorEnabled="true"
            android:textColorHint="@color/fullBlack"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="12dp"
            android:id="@+id/inputEmail1"
            android:textSize="20dp"
            android:visibility="visible"
            android:textAlignment="center"
            android:layout_below="@+id/inputAge1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputEmail"
                android:inputType="textEmailAddress"
                android:textAppearance="@style/QText">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Contact Number"
            app:errorEnabled="true"
            android:textColorHint="@color/fullBlack"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="12dp"
            android:id="@+id/inputMobile1"
            android:textSize="20dp"
            android:visibility="visible"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:layout_below="@+id/inputEmail1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputMobile"
                android:inputType="number"
                android:textAppearance="@style/QText">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:id="@+id/gender"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/inputMobile1"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/male"
                android:checked="true"
                android:text="Male"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_marginHorizontal="20dp">
            </RadioButton>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Female"
                android:text="Female"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_marginHorizontal="20dp">
            </RadioButton>
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Ip Address"
            app:errorEnabled="true"
            android:textColorHint="@color/fullBlack"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="12dp"
            android:id="@+id/inputIpaddress1"
            android:textSize="20dp"
            android:visibility="visible"
            android:textAlignment="center"
            android:layout_below="@+id/gender"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputIpaddress"
                android:textAppearance="@style/QText">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitDetails"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:text="Submit Details"
            android:background="@drawable/ovalbutton"
            android:layout_below="@+id/inputIpaddress1"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginHorizontal="15dp">
        </Button>

    </RelativeLayout>
</ScrollView>